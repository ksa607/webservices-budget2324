{
  "name": "webservices-budget",
  "version": "1.0.0",
  "description": "Demo application for the course Web Services.",
  "main": "src/index.js",
  "repository": "git@github.com:HOGENT-Web/webservices-budget.git",
  "author": "Thomas Aelbrecht <thomasaelbrecht@live.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "env-cmd nodemon",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage",
    "lint": "npx eslint . --fix"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "argon2": "^0.31.1",
    "config": "^3.3.9",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa2-swagger-ui": "^5.9.1",
    "mysql2": "^3.6.1",
    "node-emoji": "1.11.0",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  },
  "engines": {
    "npm": ">=9.8.0",
    "node": ">=20.6.0",
    "yarn": ">=1.22.0"
  }
}